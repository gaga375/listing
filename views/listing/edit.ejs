<% layout("/layout/boilerplat.ejs") %>

<style>
  .sampleimg{
    height: 8.5rem;
    width: 10rem;
  }
</style>


<body>
    <h1 style="margin-left: 20rem;">Edit listing</h1>
    <div  class="mb-3 offset-2">
        <div class="col-7">
    <form method="post" action="/listings/<%= data.id %>?_method=PUT"  class="needs-validation" novalidate  enctype="multipart/form-data" >
       


        <div class="mb-3">
            <label  class="form-label" for="title">title</label>
        <input type="text" id="title" class="form-control" name="listing[title]" required  value="<%= data.title %>" placeholder="enter title">
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please choose valid title.
          </div>
       </div>


        <div class="mb-3">
            <label  class="form-label" for="description">description</label>
        <textarea type="text" id="description" class="form-control" name="listing[description]" required ></textarea>
        <div class="invalid-feedback">
            enter description
          </div>
          </div>


            <br>
          <div>
            <p>current image</p>
            <img class="sampleimg" src="<%= orignalUrl %>" >
          </div>
           <br>

          <div class="mb-3">
            <label class="form-label" for="image">image </label>
            <input type="file" id="image" class="form-control" name="listing[image]">
            <div class="invalid-feedback">
                upload file
              </div>
          </div>

       <div class="row">
        <div class="mb-3 col- col-md-4">
            <label  class="form-label" for="price"> price</label>
            <input type="number" id="price" class="form-control" name="listing[price]" required value="<%= data.price %>" placeholder="enter price per night">
    
              <div class="invalid-feedback">
                Please choose valid price
              </div> 
        </div>
    
            <div class="mb-3 col-8 col-md-3">
                <label  class="form-label" for="location">location</label>
            <input type="text" id="location"class="form-control" name="listing[location]" required  value="<%= data.location %>" placeholder="enter your location">
         
              <div class="invalid-feedback">
                Please choose valid location
              </div>
        </div>
            </div>


        <div class="mb-3">
            <label  class="form-label" for="country"> country</label>
        <input type="text" id="country" class="form-control" name="listing[country]" required value="<%= data.country %>" placeholder="enter country name">
      
          <div class="invalid-feedback">
            Please choose a country .
          </div>
    </div>


         <button class="btn btn-outline-danger">Edit</button>
         <br><br>
    </form>
    </div>
</body>
