<% layout("/layout/boilerplat.ejs") %>
<body>
    <h1 style="margin-left: 15rem;">Create New Listing</h1>
    <div  class="mb-3 offset-2">
        <div class="col-7">
    <form action="/listings" method="POST" class="needs-validation" id="listing-form" novalidate enctype="multipart/form-data">
        <div class="row"> 
   
            <label class="form-label" for="title">title</label>
            <input type="text" id="title" class="form-control" required name="listing[title]" placeholder="ex. my home">
            <div class="invalid-feedback">
                enter valid title
        </div>
       

        <div class="mb-3">
            <label class="form-label" for="description">description</label>
            <textarea type="text" id="description" class="form-control" name="listing[description]" required ></textarea>
            <div class="invalid-feedback">
                enter description
              </div>
        </div>

    
          <div class="mb-3">
            <label class="form-label" for="image">image </label>
            <input type="file" id="image" class="form-control" name="listing[image]">
            <div class="invalid-feedback">
                upload file
              </div>
          </div>
        
          <div class="row">
            <div class="mb-3 col- col-md-4">
                <label class="form-label" for="price">price</label>
                <input type="number" id="price" class="form-control" required name="listing[price]" placeholder="ex. 2500">
                <div class="invalid-feedback">
                    enter valid price
                  </div>
            </div>
            
    
            <div class="mb-3 col-8 col-md-3">
                <label class="form-label" for="location">location</label>
                <input type="text" id="location" class="form-control" required name="listing[location]" placeholder="ex. seoni">
                <div class="invalid-feedback">
                    enter location
                </div>
            </div>
          </div>
      

       <div class="mb-3">
        <label class="form-label" for="country"> country</label>
        <input type="text" id="country" class="form-control" required name="listing[country]" placeholder="ex. india" >
        <div class="invalid-feedback">
            enter country
          </div>
       </div>
        
       <button class="btn btn-outline-danger"> Create </button>
    </form>
    

</div>
</div>

<!-- Google Maps API -->
<script async
  src="https://maps.googleapis.com/maps/api/js?key=<%=process.env.GOOGLE_API %> &callback=initMap">
</script>

</body>
